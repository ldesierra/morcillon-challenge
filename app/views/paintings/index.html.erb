<%= render 'shared/navbar' %>

<div class="w-100 d-flex justify-content-center bg-dark-secondary height-fit-content">
  <div class="row col-10 mx-5 mt-10 h-100vh">
    <% @paintings.each do |painting| %>
      <div class="col-12 col-md-4 mb-5 mb-xxl-6 p-0 px-md-2">
        <%= link_to painting_path(painting), class: 'w-100 mb-4 painting d-flex justify-content-start align-items-center position-relative' do %>
          <div class="painting-summary d-none position-absolute text-truncate w-100 text-center z-index-1">
            <h4 class="fs-3 text-yellow mb-1 mx-3 text-break"><%= painting.name.upcase %></h4>
          </div>
          <div class="position-relative w-100">
            <%= image_tag painting.image.medium.url, alt: 'painting image', class: 'rounded-2 of-cover', height: '250', width: '100%' %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

